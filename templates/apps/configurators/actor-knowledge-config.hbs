<form class="flexcol" autocomplete="off">
    <label class="title">Knowledges known:</label>
    {{#each knowledges as |knowledge_cats g_key|}}
        {{#each knowledge_cats as |knowledge key|}}
            <div class="flexrow">
                <input type="checkbox" id="{{key}}" name="knowledges.{{g_key}}.{{key}}.known" value="{{knowledge.known}}" data-dtype="Boolean" {{checked knowledge.known}}/>
                <label class="name" for="{{key}}">{{knowledge.name}}</label>
            </div>
        {{/each}}
    {{/each}}
  <button type="submit">
    <i class="far fa-save"></i> {{localize "Save"}}
  </button>
</form>