        </div>
        <div class="flexrow">
            <label class="type-value">{{ localize "ATORIA.ArmorRing"}}</label>
            <input class="longname-value" type="text" name="system.equipped_armor.ring_1.name" title="{{system.equipped_armor.ring_1.name}}" value="{{system.equipped_armor.ring_1.name}}"/>
            <input class="effect-value" type="text" name="system.equipped_armor.ring_1.effect" title="{{system.equipped_armor.ring_1.effect}}" value="{{system.equipped_armor.ring_1.effect}}"/>
        </div>
        <div class="flexrow">
            <label class="type-value">{{ localize "ATORIA.ArmorRing"}}</label>
            <input class="longname-value" type="text" name="system.equipped_armor.ring_2.name" title="{{system.equipped_armor.ring_2.name}}" value="{{system.equipped_armor.ring_2.name}}"/>
