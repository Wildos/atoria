        <div class="flexrow">
            <label class="type-value">{{ localize "ATORIA.ArmorLegs"}}</label>
            <input class="name-value" type="text" name="system.equipped_armor.legs.name" title="{{system.equipped_armor.legs.name}}" value="{{system.equipped_armor.legs.name}}"/>
