        </div>

        <div class="flexrow">
            <label class="longtitle inventory-gear-weapon">{{ localize "ATORIA.InventoryGearWeaponTitle"}}
                <a class="add-button item-create" data-type="gear-weapon" data-action="gear-weapon-item">
                    <i class="fas fa-plus"></i>
                </a>
            </label>
        </div>
        {{#each gear_weapons as |weapon key|}}
            <div class="item flexrow" data-item-id="{{weapon._id}}">
                <label class="longname-value" title="{{weapon.name}}">{{weapon.name}}</label>
                <label class="encumbrance-value">{{weapon.system.encumbrance}}</label>
                <label class="effect-value" title="{{weapon.system.description_cleaned}}">{{{weapon.system.description}}}
                <a class="config-button item-config flex0" data-action="gear-weapon-item">
                    <i class="fas fa-cog"></i>
                </a>
                </label>
            </div>
        {{/each}}
    </div>
    <div class="flexcol">
        <div class="flexrow">
            <label class="longtitle inventory-gear-bag">{{ localize "ATORIA.InventoryGearTitle"}}</label>
        </div>
        <div class="flexrow">
            <label class="shortname-value encumbrance">{{ localize "ATORIA.Encumbrance"}}</label>
            <label class="resource-value {{encumbrance_level_display_class}}">{{system.encumbrance.value}}</label>
            <label class="resource-value encumbrance">{{system.encumbrance.max}}</label>
            <label class="resource-value coin-copper">{{ localize "ATORIA.CoinCopper"}}</label>
            <input class="resource-value" type="number" name="system.coins.copper" value="{{system.coins.copper}}"/>
            <label class="resource-value coin-silver">{{ localize "ATORIA.CoinSilver"}}</label>
            <input class="resource-value" type="number" name="system.coins.silver" value="{{system.coins.silver}}"/>
            <label class="resource-value coin-gold">{{ localize "ATORIA.CoinGold"}}</label>
            <input class="resource-value" type="number" name="system.coins.gold" value="{{system.coins.gold}}"/>
        </div>
        <div class="flexrow">
            <label class="name-value gray-color">{{ localize "ATORIA.NameTitle"}}</label>
            <label class="quantity-value gray-color">{{ localize "ATORIA.ArmorQuantityTitle"}}</label>
            <label class="encumbrance-value gray-color">{{ localize "ATORIA.ArmorEncumbranceTitle"}}</label>
            <label class="effect-value gray-color">{{ localize "ATORIA.ItemEffectTitle"}}</label>
        </div>
        <div class="flexrow">
            <label class="longtitle">{{ localize "ATORIA.InventoryGearConsumableTitle"}}
                <a class="add-button item-create" data-type="gear-consumable" data-action="gear-consumable-item">
                    <i class="fas fa-plus"></i>
                </a>
            </label>
        </div>
        {{#each gear_consumables as |consumable key|}}
            <div class="flexrow item" data-item-id="{{consumable._id}}">
                <label class="name-value" title="{{consumable.name}}">{{consumable.name}}</label>
                <label class="quantity-value">{{consumable.system.quantity}}</label>
                <label class="encumbrance-value">{{consumable.system.encumbrance}}</label>
                <label class="effect-value" title="{{consumable.system.description_cleaned}}">{{{consumable.system.description}}}
                    <a class="config-button item-config flex0" data-action="skill-item">
                        <i class="fas fa-cog"></i>
                    </a>
                </label>
                
            </div>
        {{/each}}
        <div class="flexrow">
            <label class="longtitle">{{ localize "ATORIA.InventoryGearEquipmentTitle"}}
                <a class="add-button item-create" data-type="gear-equipment" data-action="gear-equipment-item" >
                    <i class="fas fa-plus"></i>
                </a>
            </label>
        </div>
        {{#each gear_equipments as |equipment key|}}
            <div class="flexrow item" data-item-id="{{equipment._id}}">
                <label class="name-value" title="{{equipment.name}}">{{equipment.name}}</label>
                <label class="quantity-value">{{equipment.system.quantity}}</label>
                <label class="encumbrance-value">{{equipment.system.encumbrance}}</label>
                <label class="effect-value" title="{{equipment.system.description_cleaned}}">{{{equipment.system.description}}}
                    <a class="config-button item-config flex0" data-action="skill-item" >
                        <i class="fas fa-cog"></i>
                    </a>
                </label>
                
            </div>
        {{/each}}
        <div class="flexrow">
            <label class="longtitle">{{ localize "ATORIA.InventoryGearIngredientMaterialTitle"}}
                <a class="add-button item-create" data-type="gear-ingredient" data-action="gear-ingredient-item">
                    <i class="fas fa-plus"></i>
                </a></label>
        </div>
        {{#each gear_ingredients as |ingredient key|}}
            <div class="flexrow item" data-item-id="{{ingredient._id}}">
                <label class="name-value" title="{{ingredient.name}}">{{ingredient.name}}</label>
                <label class="quantity-value">{{ingredient.system.quantity}}</label>
                <label class="encumbrance-value">{{ingredient.system.encumbrance}}</label>
                <label class="effect-value" title="{{ingredient.system.description_cleaned}}">{{{ingredient.system.description}}}
                    <a class="config-button item-config flex0" data-action="skill-item">
                        <i class="fas fa-cog"></i>
                    </a>
                </label>
                
            </div>
        {{/each}}
    </div>
</div>