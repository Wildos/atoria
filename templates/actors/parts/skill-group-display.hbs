{{#if (or @root.isEditingMode (getProperty @root.flags (concat "atoria." data_path)))}}
<div class="skill-group-display">
    <h5>{{localize model.label}}
    {{#if (and @root.editable @root.isEditingMode)}}
        <input class="skill-shown-control" type="checkbox" data-dtype="Boolean" data-skill-path="{{data_path}}"
        {{checked (getProperty @root.flags (concat "atoria." data_path))}}
        {{disabled (or (not @root.editable) (not @root.isEditingMode))}} />
    {{/if}}</h5>
    {{#each skill_group_data as |skill_cat_data key|}}
        {{>"atoria.actors_partials.skill-cat-display"
        skill_cat_skills=skill_cat_data
        data_path=(concat ../data_path "." key)
        model=(lookup ../model.fields key)
        }}
    {{/each}}
</div>
{{/if}}