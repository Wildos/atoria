<div class="atoria-time-limitation-display {{cssClasses}}">
    <select name="{{data_path}}.regain_type">
      {{selectOptions systemFields.regain_type.choices selected=limitation.regain_type localize=true}}
    </select>
    {{#if (ne limitation.regain_type "permanent")}}
    <label>{{localize systemFields.usage_left.label}}: </label>
    <input type="text" inputmode="numeric" data-dtype="Number" name="{{data_path}}.usage_left" value="{{limitation.usage_left}}"
        data-tooltip="{{localize systemFields.usage_left.label}}" >

    <label>{{localize systemFields.usage_max.label}}: </label>
    <input type="text" inputmode="numeric" data-dtype="Number" name="{{data_path}}.usage_max" value="{{limitation.usage_max}}"
        data-tooltip="{{localize systemFields.usage_max.label}}" >
    {{/if}}
</div>